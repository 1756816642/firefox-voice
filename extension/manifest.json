{
  "manifest_version": 2,
  "name": "speak-to-me",
  "version": "1.2.1",
  "developer": {
    "name": "Fabrice Desr√©",
    "url": "https://github.com/fabricedesre"
  },

  "applications": {
    "gecko": {
      "id": "speaktome@mozilla.com",
      "update_url": "https://testpilot.firefox.com/files/@speak-to-me/updates.json"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/*",
        "https://www.google.com/",
        "https://www.google.co.uk/*",
        "https://www.google.co.uk/",
        "https://duckduckgo.com/",
        "https://duckduckgo.com/*",
        "https://yahoo.com/",
        "https://yahoo.com/*",
        "https://uk.yahoo.com/",
        "https://uk.yahoo.com/*"
      ],
      "js": ["bodymovin.js", "content.js", "webrtc_vad.js"],
      "css": ["main.css"]
    }
  ],
  "web_accessible_resources": [
    "Done.json", 
    "Start.json", 
    "Spinning.json", 
    "assets/icon-close.svg",
    "assets/icon-mic.svg",
    "assets/icon-redo.svg",
    "assets/icon-done.svg"
  ],
  "permissions": ["<all_urls>"]
}
