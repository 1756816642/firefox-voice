{
  "name": "voicefox",
  "id": "voicefox@mozilla.com",
  "description": "This is a WebExtension that allows the browser to be voice-controlled.",
  "private": true,
  "version": "0.1.0",
  "author": {
    "name": "Mozilla Emerging Technologies",
    "url": "https://github.com/mozilla/voicefox"
  },
  "bugs": {
    "url": "https://github.com/mozilla/voicefox/issues"
  },
  "devDependencies": {
    "eslint": "^5.7.0",
    "eslint-plugin-mozilla": "^0.16.1",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "markdown": "^0.5.0",
    "npm-run-all": "^4.1.3",
    "prettier": "1.18.2",
    "web-ext": "^2.9.1",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "animate.css": "^3.7.2",
    "bodymovin": "^4.13.0",
    "google-assistant": "^0.5.4",
    "speaktome-api": "^0.2.1",
    "testpilot-ga": "^0.3.0",
    "webextension-polyfill": "^0.3.1",
    "webrtcvad_js": "^1.0.0"
  },
  "homepage": "https://github.com/mozilla/voicefox",
  "keywords": [],
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/voicefox.git"
  },
  "scripts": {
    "start": "mkdir -p Profile && web-ext run --firefox-profile Profile/ --keep-profile-changes --firefox nightly --source-dir extension/ --browser-console",
    "build": "web-ext build -s extension --overwrite-dest",
    "format": "prettier 'extension/**/*.{js,css}' --write",
    "lint": "npm-run-all lint:*",
    "lint:extension": "web-ext lint -s extension --ignore-files js/vendor/* --self-hosted",
    "lint:js": "eslint extension",
    "once": "web-ext run -s extension",
    "package": "npm run build && mv web-ext-artifacts/*.zip addon.xpi",
    "postinstall": "bin/postinstall.sh"
  }
}
